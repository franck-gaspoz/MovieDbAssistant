{
  // -----------
  //  Logging
  // -----------

  "Logging": {
    "LogLevel": {
      "Default": "Trace"
    },
    "AppLogger": {
      "IsEnabled": true
    }
  },

  // -----------
  //  App
  // -----------

  "App": {
    "Title": "Movie Db Assistant",
    "Lang": "en",
    "VersionDate": "2024/10/03",
    "MovieDbScraperToolVersion": "1.1.1"
  },

  "BalloonTips": {
    "Start": "Running",
    "End": "Good bye !",
    "Delay": 4000
  },

  "Errors": {

  },

  "Assets": {
    "Icons": {
      "Tray": "multimedia.ico",
      "Buzy1": "led-red.ico",
      "Buzy2": "led-black.ico"
    }
  },

  "Tools": {

    "Shell": {
      "CommandLine": "cmd.exe",
      "Args": "/K \"dir *.exe\""
    },

    "FolderExplorer": {
      "CommandLine": "explorer.exe"
    },

    "OpenBrowser": {
      "CommandLine": "explorer.exe"
    }
  },

  "Urls": {
    "HelpGitHub": "https://github.com/franck-gaspoz/MovieDbAssistant/blob/main/README.md"
  },

  "Anims": {
    "Interval": {
      "Dot": 500,
      "WaitTrayIcon": 500
    },
    "WaitIcons": [
      "led-red.ico",
      "led-black.ico"
    ]
  },

  "Options": {
    "OpenOuputWindowOnBuild": false
  },

  // -----------
  //  Texts
  // -----------

  "Texts": {
    "Exit": "Exit",
    "Help": "Help (GitHub)",
    "OpenOutpFolder": "Open output folder",
    "OpenInpFolder": "Open input folder",
    "Settings": "Settings ...",
    "BuildFromInputFolder": "Build input folder",
    "BuildFromQueryFile": "Build query file...",
    "BuildFromJsonFile": "Build Json file...",
    "BuildFromClipboard": "Build clipboard (query)",
    "ProcInpFold": "processing input folder",
    "ProcClipboard": "processing clipboard",
    "ProcFile": "processing file: ",
    "ProcMovie": "processing movie: ",
    "ProcMovieList": "processing movie list: ",
    "InputFolderProcessed": "input folder processed!",
    "InputFolderProcessedWithErrors": "input folder processed with errors...",
    "ClipboardProcessed": "clipboard processed!",
    "Error": "Error",
    "Warning": "Warning",
    "Info": "Information",
    "BuilderBusy": "Builder is busy.\noperation cancelled.",
    "FeatureBusy": "Feature is busy.\noperation cancelled.",
    "ErrorUnhandled": "an unhandled error occured:\n",
    "BuildInputEndWithErrors": "build completed with errors:\n",
    "BuildInputEndWithoutErrors": "build completed\n",
    "BuildJsonEndWithoutErrors": "json file processed:\n",
    "BuildQueryEndWithoutErrors": "query processed:\n",
    "DataProviderFailed": "data provider failed for source:\n",

    "MoviesList": "Movies List"
  },

  // -----------
  //  Paths
  // -----------

  "Paths": {
    "Assets": "assets",
    "Temp": "temp",
    "Output": "output",
    "OutputPages": "pages",
    "Input": "input",
    // Rsc & sub paths
    "Resources": "rsc",
    "RscHtml": "html",
    "RscHtmlTemplates": "templates",
    "RscHtmlAssets": "assets",
    "RscHtmlAssetsThemes": "themes",
    "RscHtmlAssetsTpl": "tpl"
  },

  // -----------
  //  Scrap
  // -----------

  "Scrap": {
    // scrapper tool shell cli
    "ToolPath": "tools/movie-db-scrapper-windows-64bit-intel-1.1.1.exe",
    // enable/disable the query cache
    "SkipIfTempOutputFileAlreadyExists": true,
    // prefers scraped or queried data
    "Prefers": {
      // if true, replace scraped titles with queried titles. track the original title in MovieModel.OriginalTitle
      "QueryTitle": false,
      // it true, replaces scraped year with queried year if available. track the original title in MovieModel.OriginalYear
      "QueryYear": true,
      // prefers year from query if available when year from title is null
      "QueryYearIfDataTitleIsNull": true
    },
    // scraper output json prepend
    "OutputModelPrefix": "{\"movies\":\n",
    // scrapper output json append
    "OutputModelPostfix": "\n}",

    // default query filter
    "DefaultFilters": {
      // origin country
      "Countries": [ "FR","US" ],
      // languages
      "Languages": [],
      // result max count
      "Count": 10,
      // title type (movie, game, ...)
      // feature,tv_series,tv_miniseries,tv_movie,tv_episode,short,tv_short,tv_special,video
      "Types": [ "Feature", "Tv_series", "Tv_miniseries", "Video", "Tv_special", "Tv_movie", "Tv_episode" ]
    }
  },

  // -----------
  //  Build
  // -----------

  "Build": {
    "SearchPatternJson": "*.json",
    "SearchPatternTxt": "*.txt",
    "PrefixFileDisabled": "-",

    // --------------
    //  Html builder
    // --------------

    "Html": {
      "Extension": ".html",
      "TemplateFilename": "template.json",
      "DataFilename": "js/data/data.js",
      "TemplateId": "arp188-static",
      "TemplateVersion": "1.0.0",
      "Assets": {
        // TODO: check if used (think not)
        "ListWallpaper": "/movie-page-list-wallpapers"
      }
    }
  }
}
